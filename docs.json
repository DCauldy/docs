{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "North Reports API",
  "colors": {
    "primary": "#2563EB",
    "light": "#3B82F6",
    "dark": "#1D4ED8"
  },
  "favicon": "/favicon.svg",
  "openapi": ["/openapi.yaml"],
  "api": {
    "baseUrl": "https://api.northreports.com",
    "auth": {
      "method": "bearer"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "introduction",
              "authentication",
              "quickstart"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Users",
            "pages": [
              "api-reference/users/get-current-user"
            ]
          },
          {
            "group": "Reports",
            "pages": [
              "api-reference/reports/list-reports",
              "api-reference/reports/create-report",
              "api-reference/reports/get-report",
              "api-reference/reports/update-report",
              "api-reference/reports/delete-report"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://northreports.com/dashboard",
          "icon": "gauge"
        },
        {
          "anchor": "Support",
          "href": "https://northreports.com/support",
          "icon": "envelope"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@northreports.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://northreports.com/dashboard"
    }
  },
  "footer": {
    "socials": {
      "website": "https://northreports.com"
    }
  }
}
